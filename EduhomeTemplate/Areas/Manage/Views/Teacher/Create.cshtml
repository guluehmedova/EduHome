@model Teacher


<div class="container">
    <div class="row">
        <div class="col-lg-12 mx-auto"><h1>Teacher Create</h1></div>
        <div class="col-lg-8 mx-auto">
            <form method="post" asp-action="create" enctype="multipart/form-data">
                <div class="form-group">
                    <label asp-for="Desc">Desc</label>
                    <input class="form-control" asp-for="Desc" placeholder="Desc">
                </div>
                <div class="form-group">
                    <label asp-for="Name">Time</label>
                    <input class="form-control" asp-for="Name" placeholder="Name">
                </div>

                <div class="form-group">
                    <label asp-for="AboutTitle">title</label>
                    <input class="form-control" asp-for="AboutTitle" placeholder="AboutTitle">
                </div>
                <div class="form-group">
                    <label asp-for="ImageFile">ImageFile</label>
                    <input class="form-control" asp-for="ImageFile">
                    <span class="text-danger" asp-validation-for="ImageFile"></span>
                </div>
                <button type="submit" class="btn btn-primary">Create</button>
            </form>
        </div>
    </div>
</div>
