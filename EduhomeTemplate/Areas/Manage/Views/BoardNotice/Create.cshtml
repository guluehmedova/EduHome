@model Board


<div class="container">
    <div class="row">
        <div class="col-lg-8 mx-auto">
            <form method="post" asp-action="create">
                <div class="form-group">
                    <label asp-for="Desc">Desc</label>
                    <input class="form-control" asp-for="Desc" placeholder="Desc">
                </div>
                <div class="form-group">
                    <label asp-for="Time">Time</label>
                    <input class="form-control" asp-for="Time" placeholder="Time">
                </div>

                <div class="form-group">
                    <label asp-for="Title">title</label>
                    <input class="form-control" asp-for="Title" placeholder="title">
                </div>

                <button type="submit" class="btn btn-primary">Create</button>
            </form>
        </div>
    </div>
</div>