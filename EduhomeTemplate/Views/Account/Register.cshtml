@model MemberRegisterViewModel
@{
    ViewData["Title"] = "Register";
}

    <!-- Register start -->
    <div class="register-area pt-150 pb-150">
        <div class="container">
            <div class="row">
                <div class="col-md-6 col-md-offset-3 text-center">
                    <div class="login">
                        <div class="login-form-container">
                            <div class="login-text">
                                <h2>sign up</h2>
                                <span>Please login using account detail bellow.</span>
                            </div>
                            <div class="login-form">
                                <form asp-action="register" method="post">
                                    <input asp-for="Username" placeholder="Username">
                                    <span asp-validation-for="Username" class="text-danger"></span>
                                    <input asp-for="Password" type="password" placeholder="Password">
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                    <input asp-for="Email" type="email" placeholder="email">
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                    <div class="button-box">
                                        <div class="login-toggle-btn">
                                            <input type="checkbox" id="remember">
                                            <label for="remember">Remember me</label>
                                            <a href="#">Forgot Password?</a>
                                        </div>
                                        <button type="submit" class="default-btn">sign up</button>
                                    </div>
                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Register end -->
