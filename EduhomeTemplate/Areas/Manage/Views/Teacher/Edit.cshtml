@model Teacher
@{
    ViewData["Title"] = "Edit";
}
<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <h1>Edit Teacher</h1>
        </div>
        <div class="col-lg-8 mx-auto">
            <form method="post" asp-action="edit" enctype="multipart/form-data">
                <div class="form-group">
                    <label asp-for="Desc">Desc</label>
                    <input type="text" class="form-control" asp-for="Desc" placeholder="Enter board desc">
                    <span class="text-danger" asp-validation-for="Desc"></span>
                </div>
                <div class="form-group">
                    <label asp-for="AboutTitle">Time</label>
                    <input type="text" class="form-control" asp-for="AboutTitle" placeholder="Enter board name">
                    <span class="text-danger" asp-validation-for="AboutTitle"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Degree">Desc</label>
                    <input type="text" class="form-control" asp-for="Degree" placeholder="Enter board name">
                    <span class="text-danger" asp-validation-for="Degree"></span>
                </div>

                <div class="form-group">
                    <label asp-for="ImageFile">ImageFile</label>
                    <input class="form-control" asp-for="ImageFile">
                    <span class="text-danger" asp-validation-for="ImageFile"></span>
                </div>
                <div class="img-box" style="width:30%;position:relative">
                    <input type="hidden" name="Image" value="@Model.Image" />
                    <img style="max-width:100%" src="~/uploads/teachers/@Model.Image" alt="Alternate Text" />
                    <i class="fas fa-times img-box-remove" style=" position: absolute; top: -8px; right: -6px; color: red; cursor: pointer; "></i>
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
    </div>
</div>



